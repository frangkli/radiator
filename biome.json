{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", "build"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"all": true
			},
			"nursery": {
				"useGoogleFontDisplay": "error",
				"noDocumentImportInPage": "error",
				"noHeadElement": "error",
				"noHeadImportInDocument": "error",
				"noImgElement": "off",
				"useComponentExportOnlyModules": {
					"level": "error",
					"options": {
						"allowExportNames": ["metadata"]
					}
				}
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noShadowRestrictedNames": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
